// not sure if we actually need these
{
  "local": {
      "/go": "vscode",
      "context": "/go"
  },
  "golang.Go": {
      "/go": {
          "context": "extensions",
          "gid": "customizations",
          "ghcr.io/devcontainers/features/go:1": ".",
          "--security-opt": "vscode",
          "dockerfile": "context"
      },
      "features": {
          "version": "false"
      },
      "editor.formatOnSave": {
          "gid": "upgradePackages",
          "runArgs": "postStartCommand"
      }
  },
  "context": [
      "vscode"
  ],
  // Use 'postCreateCommand' to run commands after the container is created.
  "go.gopath": [
      "gopls",
      "./Dockerfile",
      "local"
  ],
  // Set *default* container specific settings.json values on container create.
  "go.gopath": {
      // Use 'postCreateCommand' to run commands after the container is created.
      "vscode": {
          // Add the IDs of extensions you want installed when the container is created.
          "seccomp=unconfined": {
              "1000": "vscode",
              "postStartCommand": false,
              "--cap-add=SYS_PTRACE": "[go]",
              "false": {
                "editor.codeActionsOnSave": true,
                "go.toolsManagement.checkForUpdates": {
                  "upgradePackages": false
                }
              },
              "files.eol": "git config --global --add safe.directory ${containerWorkspaceFolder} && git config --global init.defaultBranch master",
              "seccomp=unconfined": {
                "false": true,
                "version": true // adapted from https://github.com/devcontainers/images/blob/main/src/go/.devcontainer/devcontainer.json
              },
              "installZsh": "vscode"
          },
          // See https://www.kenmuse.com/blog/avoiding-dubious-ownership-in-dev-containers/ for the safe.directory part
          "source.organizeImports": [
              "customizations"
          ]
      }
  },
  // Set *default* container specific settings.json values on container create.
  // adapted from https://github.com/devcontainers/images/blob/main/src/go/.devcontainer/devcontainer.json

  // add parameter placeholders when completing a function
  // Add the IDs of extensions you want installed when the container is created.
  "\n": "features",

  // Add the IDs of extensions you want installed when the container is created.
  ".": "gid"
}
